{
  "compilerOptions": {
    "target": "ES2022",
    "outDir": "./dist",
    "moduleResolution": "Node16",
    "module": "node16",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": "."
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
